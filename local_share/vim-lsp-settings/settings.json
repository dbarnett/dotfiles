{
  "$schema": "https://mattn.github.io/vim-lsp-settings/local-schema.json",
  "json-languageserver": {
    "workspace_config": {
      "json": {
        "schemas": [
          {
            "fileMatch": [
              "schemas/json/*.json"
            ],
            "url": "http://json-schema.org/draft-07/schema#"
          },
          {
            "fileMatch": [
              "*vim*/addon-info.json"
            ],
            "url": "http://json.schemastore.org/vim-addon-info"
          }
        ]
      }
    }
  },
  "pyls": {
    "workspace_config": {
      "pyls": {
        "plugins": {
          "pycodestyle": { "enabled": false },
          "pyflakes": { "enabled": false }
        }
      }
    }
  },
  "pyls-all": { "disabled": true },
  "eclipse-jdt-ls": { "disabled": true }
}
