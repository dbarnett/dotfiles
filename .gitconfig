[user]
    name = David Barnett
[core]
    autocrlf = input
    excludesFile = ~/.gitignore
    pager = delta
[init]
    defaultBranch = main
[color]
    ui = auto
[merge]
    tool = meld
    conflictStyle = diff3
[mergetool]
    keepBackup = false
    prompt = false
[diff]
    algorithm = patience
    colorMoved = default
[diff "lockb"]
    textconv = bun
    binary = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
[pull]
    ff = only
[include]
    path = .gitconfig.d/user.conf
